void main() {
    Scanner sc=new Scanner(System.in);
    System.out.println("You are now using Magnitude comparator");
    System.out.println("Please enter the bits one by one \n Start from 'LSB'");
    System.out.println("Please select the comparator:");
    System.out.println("   ==========");
    System.out.println("1. Magnitude Equaliser");
    System.out.println("2. 1st Variable greater");
    System.out.println("3. 2nd variable greater");
    byte e= sc.nextByte();
    if(e==1){
        System.out.println("Please enter the 1st bit of A \n Sart from 'LSB'");
        byte a= sc.nextByte();
        System.out.println("Please enter the 2nd bit of A");
        byte b= sc.nextByte();
        System.out.println("==========OK========== ");
        System.out.println("Please enter the 1st bit of B \n Sart from 'LSB'");
        byte c= sc.nextByte();
        System.out.println("Please enter the 2nd bit of B");
        byte d= sc.nextByte();
        System.out.println("Are you sure about this");
        System.out.println();
        if(b==d){
            if(c==a){
                System.out.println("A is Equal to B");
            }
            else{
                System.out.println("A is not Equal to b");
            }
        }
        else{
            System.out.println("A is not equal to B");
        }
    }
    else{
        if(e==2){
            System.out.println("Please enter the 1st bit of A \n Sart from 'LSB'");
            byte a= sc.nextByte();
            System.out.println("Please enter the 2nd bit of A");
            byte b= sc.nextByte();
            System.out.println("==========OK========== ");
            System.out.println("Please enter the 1st bit of B \n Sart from 'LSB'");
            byte c= sc.nextByte();
            System.out.println("Please enter the 2nd bit of B");
            byte d= sc.nextByte();
            if (b == d) {
                if (a > c) {
                    System.out.println("A is greater then B");
                } else {
                    System.out.println("A is not greater then B");
                }
            } else {
                if(b>d){
                    System.out.println("A is greater then B");
                }
                else{
                    System.out.println("A is not greater then B");
                }
            }
        }
        else{
            if(e==3){
                System.out.println("Please enter the bits one by one \n Start from 'LSB'");
                System.out.println("please enter the 1st bit of A");
                byte a= sc.nextByte();
                System.out.println("Please enter the 2nd bit of A");
                byte b= sc.nextByte();
                System.out.println("please enter the 1st bit of B");
                byte c= sc.nextByte();
                System.out.println("Please enter the 2nd bit of B");
                byte d= sc.nextByte();
                if(d==b){
                    if(c>a){
                        System.out.println("B is greater then A");
                    }
                    else{
                        System.out.println("B is not greater then A");
                    }
                }
                else{
                    if(d>b){
                        System.out.println("B is greater then A");
                    }
                    else{
                        System.out.println("B is not greater then A");
                    }
                }
            }
        }
    }
    System.out.println("Please repeat the Whole process");
    System.out.println("Thank you for using this");
}
